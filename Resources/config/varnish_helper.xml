<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="liip_cache_control.varnish" class="Liip\CacheControlBundle\Helper\Varnish">
            <argument>%liip_cache_control.varnish.host%</argument>
            <argument>%liip_cache_control.varnish.ips%</argument>
            <argument>%liip_cache_control.varnish.port%</argument>
            <argument>%liip_cache_control.varnish.purge_instruction%</argument>
        </service>

    </services>
</container>
